<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: rgba(173,216,230,0.95);" stylesheets="@assets/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.typewrite.game.controller.HomeController">

    <ImageView fx:id="racingcarImage" fitHeight="173.0" fitWidth="437.0" layoutX="464.0" layoutY="14.0"
               preserveRatio="true">
        <Image url="@assets/racing car.png"/>
    </ImageView>

    <ImageView fitHeight="152.0" fitWidth="280.0" layoutX="110.0" layoutY="158.0" preserveRatio="true" rotate="-20">
        <Image url="@assets/target.png"/>
    </ImageView>

    <ImageView fitHeight="187.0" fitWidth="180.0" layoutX="955.0" layoutY="114.0" preserveRatio="true" rotate="20">
        <Image url="@assets/type machine.png"/>
    </ImageView>

    <ImageView fitHeight="252.0" fitWidth="263.0" layoutX="213.0" layoutY="337.0" preserveRatio="true">
        <Image url="@assets/racing car single.png"/>
    </ImageView>

    <ImageView fitHeight="282.0" fitWidth="308.0" layoutX="744.0" layoutY="345.0" preserveRatio="true">
        <Image url="@assets/racing cars multi.jpg"/>
    </ImageView>

    <VBox alignment="CENTER" layoutX="500.0" layoutY="150.0" spacing="20" />

    <Text layoutX="465.0" layoutY="226.0" style="-fx-font-size: 70; -fx-fill: black; -fx-font-weight: bold;" text="Welcome" textAlignment="CENTER" />
    <Text layoutX="500.0" layoutY="287.0" style="-fx-font-size: 40; -fx-fill: black; -fx-font-weight: bold;" text="to Typeracer" textAlignment="CENTER" />

    <Button layoutX="737.0" layoutY="634.0" mnemonicParsing="false" onAction="#onMultiplePlayClick" prefHeight="60.0" prefWidth="321.0" text="Enter Multiplayer Game">
        <font>
            <Font size="24.0" />
        </font>
    </Button>
    <Button layoutX="178.0" layoutY="636.0" mnemonicParsing="false" onAction="#onSinglePlayClick" prefHeight="47.0" prefWidth="321.0" text="Practice in Single Game">
        <font>
            <Font size="24.0" />
        </font>
    </Button>
</AnchorPane>
